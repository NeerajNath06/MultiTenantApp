@model SecurityAgencyApp.Web.Models.Api.MenuListResponse
@{
    ViewData["Title"] = "Menus Management";
    var currentSort = Model?.SortBy ?? "";
    var currentDirection = Model?.SortDirection ?? "asc";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Menus</h1>
            <p class="page-subtitle">Manage navigation menus and submenus</p>
        </div>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-list me-2"></i>Add New Menu
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card border-0 shadow-sm mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <input type="hidden" name="pageNumber" value="1" />
            <input type="hidden" name="pageSize" value="@(Model?.PageSize ?? 10)" />
            <input type="hidden" name="sortBy" value="@currentSort" />
            <input type="hidden" name="sortDirection" value="@currentDirection" />
            <div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                    <input type="text" name="search" class="form-control" placeholder="Search by name, route..." value="@Model?.Search" />
                </div>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-filter me-2"></i>Search
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        @if (Model?.Items != null && Model.Items.Any())
        {
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <span class="text-muted">Showing @((Model.PageNumber - 1) * Model.PageSize + 1) to @(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount)) of @Model.TotalCount menus</span>
                </div>
                <div>
                    <select class="form-select form-select-sm d-inline-block" style="width: auto;" onchange="changePageSize(this.value)">
                        <option value="10" selected="@(Model.PageSize == 10)">10 per page</option>
                        <option value="25" selected="@(Model.PageSize == 25)">25 per page</option>
                        <option value="50" selected="@(Model.PageSize == 50)">50 per page</option>
                        <option value="100" selected="@(Model.PageSize == 100)">100 per page</option>
                    </select>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <a href="@Url.Action("Index", new { pageNumber = Model.PageNumber, pageSize = Model.PageSize, search = Model.Search, sortBy = "name", sortDirection = currentSort == "name" && currentDirection == "asc" ? "desc" : "asc" })" class="text-decoration-none text-dark">
                                    Name
                                    @if (currentSort == "name")
                                    {
                                        <i class="fas fa-sort-@(currentDirection == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort text-muted"></i>
                                    }
                                </a>
                            </th>
                            <th>Icon</th>
                            <th>Route</th>
                            <th>
                                <a href="@Url.Action("Index", new { pageNumber = Model.PageNumber, pageSize = Model.PageSize, search = Model.Search, sortBy = "order", sortDirection = currentSort == "order" && currentDirection == "asc" ? "desc" : "asc" })" class="text-decoration-none text-dark">
                                    Order
                                    @if (currentSort == "order")
                                    {
                                        <i class="fas fa-sort-@(currentDirection == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort text-muted"></i>
                                    }
                                </a>
                            </th>
                            <th>Sub Menus</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var menu in Model.Items)
                        {
                            <tr>
                                <td>
                                    <div class="fw-semibold">@(menu.DisplayName ?? menu.Name)</div>
                                    @if (!string.IsNullOrEmpty(menu.Name) && menu.Name != menu.DisplayName)
                                    {
                                        <small class="text-muted">@menu.Name</small>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(menu.Icon))
                                    {
                                        <i class="@menu.Icon fa-lg"></i>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>@(menu.Route ?? "-")</td>
                                <td>
                                    <span class="badge bg-secondary">@menu.DisplayOrder</span>
                                </td>
                                <td>
                                    <span class="badge bg-info">
                                        <i class="fas fa-list-ul me-1"></i>@(menu.SubMenus?.Count ?? 0)
                                    </span>
                                </td>
                                <td>
                                    @if (menu.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle me-1"></i>Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times-circle me-1"></i>Inactive
                                        </span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Create", "SubMenus", new { menuId = menu.Id })" class="btn btn-sm btn-outline-success" title="Add SubMenu">
                                            <i class="fas fa-plus"></i>
                                        </a>
                                        <a href="@Url.Action("Index", "SubMenus", new { menuId = menu.Id })" class="btn btn-sm btn-outline-info" title="View SubMenus">
                                            <i class="fas fa-list-ul"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        @if (Model.PageNumber > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.PageNumber - 1, pageSize = Model.PageSize, search = Model.Search, sortBy = Model.SortBy, sortDirection = Model.SortDirection })">
                                    <i class="fas fa-chevron-left"></i> Previous
                                </a>
                            </li>
                        }
                        @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { pageNumber = i, pageSize = Model.PageSize, search = Model.Search, sortBy = Model.SortBy, sortDirection = Model.SortDirection })">@i</a>
                            </li>
                        }
                        @if (Model.PageNumber < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.PageNumber + 1, pageSize = Model.PageSize, search = Model.Search, sortBy = Model.SortBy, sortDirection = Model.SortDirection })">
                                    Next <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-list fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No menus found</h5>
                @if (!string.IsNullOrEmpty(Model?.Search))
                {
                    <p class="text-muted">No results found for "@Model.Search"</p>
                }
                else
                {
                    <p class="text-muted">Get started by creating your first menu.</p>
                }
                <a href="@Url.Action("Create")" class="btn btn-primary mt-3">
                    <i class="fas fa-list me-2"></i>Add New Menu
                </a>
            </div>
        }
    </div>
</div>

<script>
    function changePageSize(size) {
        const url = new URL(window.location.href);
        url.searchParams.set('pageSize', size);
        url.searchParams.set('pageNumber', '1');
        window.location.href = url.toString();
    }
</script>
