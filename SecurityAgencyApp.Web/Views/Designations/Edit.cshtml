@model SecurityAgencyApp.Web.Models.Api.UpdateDesignationRequest
@{
    ViewData["Title"] = "Edit Designation";
    var departments = ViewBag.Departments as List<SecurityAgencyApp.Application.Features.Departments.Queries.GetDepartmentList.DepartmentDto>;
}

<div class="page-header">
    <h1 class="page-title">Edit Designation</h1>
    <p class="page-subtitle">Update designation details</p>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">Designation Name <span class="text-danger">*</span></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Code" class="form-label">Designation Code <span class="text-danger">*</span></label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="DepartmentId" class="form-label">Department</label>
                    <select asp-for="DepartmentId" class="form-select">
                        <option value="">Select Department (Optional)</option>
                        @if (departments != null)
                        {
                            @foreach (var dept in departments)
                            {
                                <option value="@dept.Id" selected="@(Model.DepartmentId == dept.Id)">@dept.Name</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="IsActive" class="form-label">Status</label>
                    <div class="form-check form-switch mt-2">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                        <label asp-for="IsActive" class="form-check-label">Active</label>
                    </div>
                </div>

                <div class="col-md-12">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Update Designation
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-times me-2"></i>Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
