@model SecurityAgencyApp.Web.Models.Api.IncidentListResponse
@{
    ViewData["Title"] = "Incident Reports";
    var sites = ViewBag.Sites as SelectList;
    var currentSort = Model?.SortBy ?? "";
    var currentDirection = Model?.SortDirection ?? "desc";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Incident Reports</h1>
            <p class="page-subtitle">Manage and track incident reports</p>
        </div>
        <div class="d-flex flex-wrap gap-2 align-items-center">
            <div class="btn-group" role="group">
                <a href="@Url.Action("Export", new { format = "csv", siteId = ViewContext.HttpContext.Request.Query["siteId"], status = ViewContext.HttpContext.Request.Query["status"], search = Model?.Search, sortBy = Model?.SortBy, sortDirection = Model?.SortDirection })" class="btn btn-outline-success btn-sm">
                    <i class="fas fa-file-csv me-1"></i>CSV
                </a>
                <a href="@Url.Action("Export", new { format = "xlsx", siteId = ViewContext.HttpContext.Request.Query["siteId"], status = ViewContext.HttpContext.Request.Query["status"], search = Model?.Search, sortBy = Model?.SortBy, sortDirection = Model?.SortDirection })" class="btn btn-outline-success btn-sm">
                    <i class="fas fa-file-excel me-1"></i>Excel
                </a>
                <a href="@Url.Action("Export", new { format = "pdf", siteId = ViewContext.HttpContext.Request.Query["siteId"], status = ViewContext.HttpContext.Request.Query["status"], search = Model?.Search, sortBy = Model?.SortBy, sortDirection = Model?.SortDirection })" class="btn btn-outline-danger btn-sm">
                    <i class="fas fa-file-pdf me-1"></i>PDF
                </a>
            </div>
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-exclamation-triangle me-2"></i>Report Incident
            </a>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card border-0 shadow-sm mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <input type="hidden" name="pageNumber" value="1" />
            <input type="hidden" name="pageSize" value="@(Model?.PageSize ?? 10)" />
            <input type="hidden" name="sortBy" value="@currentSort" />
            <input type="hidden" name="sortDirection" value="@currentDirection" />
            <div class="col-md-3">
                <label class="form-label">Filter by Site</label>
                <select name="siteId" class="form-select" asp-items="sites">
                    <option value="">All Sites</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Filter by Status</label>
                <select name="status" class="form-select">
                    <option value="">All Status</option>
                    <option value="Open" selected="@(ViewContext.HttpContext.Request.Query["status"] == "Open")">Open</option>
                    <option value="InProgress" selected="@(ViewContext.HttpContext.Request.Query["status"] == "InProgress")">In Progress</option>
                    <option value="Resolved" selected="@(ViewContext.HttpContext.Request.Query["status"] == "Resolved")">Resolved</option>
                    <option value="Closed" selected="@(ViewContext.HttpContext.Request.Query["status"] == "Closed")">Closed</option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Search</label>
                <input type="text" name="search" class="form-control" placeholder="Search by incident number, type, description..." value="@Model?.Search" />
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-filter me-2"></i>Filter
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        @if (Model?.Items != null && Model.Items.Any())
        {
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <span class="text-muted">Showing @((Model.PageNumber - 1) * Model.PageSize + 1) to @(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount)) of @Model.TotalCount incidents</span>
                </div>
                <div>
                    <select class="form-select form-select-sm d-inline-block" style="width: auto;" onchange="changePageSize(this.value)">
                        <option value="10" selected="@(Model.PageSize == 10)">10 per page</option>
                        <option value="25" selected="@(Model.PageSize == 25)">25 per page</option>
                        <option value="50" selected="@(Model.PageSize == 50)">50 per page</option>
                        <option value="100" selected="@(Model.PageSize == 100)">100 per page</option>
                    </select>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <a href="@Url.Action("Index", new { pageNumber = Model.PageNumber, pageSize = Model.PageSize, search = Model.Search, sortBy = "number", sortDirection = currentSort == "number" && currentDirection == "asc" ? "desc" : "asc", siteId = ViewContext.HttpContext.Request.Query["siteId"], status = ViewContext.HttpContext.Request.Query["status"] })" class="text-decoration-none text-dark">
                                    Incident #
                                    @if (currentSort == "number")
                                    {
                                        <i class="fas fa-sort-@(currentDirection == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort text-muted"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@Url.Action("Index", new { pageNumber = Model.PageNumber, pageSize = Model.PageSize, search = Model.Search, sortBy = "date", sortDirection = currentSort == "date" && currentDirection == "asc" ? "desc" : "asc", siteId = ViewContext.HttpContext.Request.Query["siteId"], status = ViewContext.HttpContext.Request.Query["status"] })" class="text-decoration-none text-dark">
                                    Date
                                    @if (currentSort == "date")
                                    {
                                        <i class="fas fa-sort-@(currentDirection == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort text-muted"></i>
                                    }
                                </a>
                            </th>
                            <th>Site</th>
                            <th>
                                <a href="@Url.Action("Index", new { pageNumber = Model.PageNumber, pageSize = Model.PageSize, search = Model.Search, sortBy = "type", sortDirection = currentSort == "type" && currentDirection == "asc" ? "desc" : "asc", siteId = ViewContext.HttpContext.Request.Query["siteId"], status = ViewContext.HttpContext.Request.Query["status"] })" class="text-decoration-none text-dark">
                                    Type
                                    @if (currentSort == "type")
                                    {
                                        <i class="fas fa-sort-@(currentDirection == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort text-muted"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@Url.Action("Index", new { pageNumber = Model.PageNumber, pageSize = Model.PageSize, search = Model.Search, sortBy = "severity", sortDirection = currentSort == "severity" && currentDirection == "asc" ? "desc" : "asc", siteId = ViewContext.HttpContext.Request.Query["siteId"], status = ViewContext.HttpContext.Request.Query["status"] })" class="text-decoration-none text-dark">
                                    Severity
                                    @if (currentSort == "severity")
                                    {
                                        <i class="fas fa-sort-@(currentDirection == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort text-muted"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@Url.Action("Index", new { pageNumber = Model.PageNumber, pageSize = Model.PageSize, search = Model.Search, sortBy = "status", sortDirection = currentSort == "status" && currentDirection == "asc" ? "desc" : "asc", siteId = ViewContext.HttpContext.Request.Query["siteId"], status = ViewContext.HttpContext.Request.Query["status"] })" class="text-decoration-none text-dark">
                                    Status
                                    @if (currentSort == "status")
                                    {
                                        <i class="fas fa-sort-@(currentDirection == "asc" ? "up" : "down")"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort text-muted"></i>
                                    }
                                </a>
                            </th>
                            <th>Description</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var incident in Model.Items)
                        {
                            <tr>
                                <td><span class="badge bg-secondary">@incident.IncidentNumber</span></td>
                                <td>@incident.IncidentDate.ToString("dd MMM yyyy HH:mm")</td>
                                <td>@incident.SiteName</td>
                                <td>@incident.IncidentType</td>
                                <td>
                                    @if (incident.Severity == "Critical")
                                    {
                                        <span class="badge bg-danger">Critical</span>
                                    }
                                    else if (incident.Severity == "High")
                                    {
                                        <span class="badge bg-warning">High</span>
                                    }
                                    else if (incident.Severity == "Medium")
                                    {
                                        <span class="badge bg-info">Medium</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Low</span>
                                    }
                                </td>
                                <td>
                                    @if (incident.Status == "Open")
                                    {
                                        <span class="badge bg-danger">Open</span>
                                    }
                                    else if (incident.Status == "InProgress")
                                    {
                                        <span class="badge bg-warning">In Progress</span>
                                    }
                                    else if (incident.Status == "Resolved")
                                    {
                                        <span class="badge bg-success">Resolved</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Closed</span>
                                    }
                                </td>
                                <td>@incident.Description</td>
                                <td class="text-end">
                                    @if (incident.Status != "Resolved" && incident.Status != "Closed")
                                    {
                                        <form asp-action="Resolve" method="post" class="d-inline" onsubmit="return confirm('Mark as resolved?');">
                                            <input type="hidden" name="id" value="@incident.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-success" title="Resolve">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        @if (Model.PageNumber > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.PageNumber - 1, pageSize = Model.PageSize, search = Model.Search, sortBy = Model.SortBy, sortDirection = Model.SortDirection, siteId = ViewContext.HttpContext.Request.Query["siteId"], status = ViewContext.HttpContext.Request.Query["status"] })">
                                    <i class="fas fa-chevron-left"></i> Previous
                                </a>
                            </li>
                        }
                        @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { pageNumber = i, pageSize = Model.PageSize, search = Model.Search, sortBy = Model.SortBy, sortDirection = Model.SortDirection, siteId = ViewContext.HttpContext.Request.Query["siteId"], status = ViewContext.HttpContext.Request.Query["status"] })">@i</a>
                            </li>
                        }
                        @if (Model.PageNumber < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.PageNumber + 1, pageSize = Model.PageSize, search = Model.Search, sortBy = Model.SortBy, sortDirection = Model.SortDirection, siteId = ViewContext.HttpContext.Request.Query["siteId"], status = ViewContext.HttpContext.Request.Query["status"] })">
                                    Next <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-exclamation-triangle fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No incidents found</h5>
                @if (!string.IsNullOrEmpty(Model?.Search))
                {
                    <p class="text-muted">No results found for "@Model.Search"</p>
                }
                <a href="@Url.Action("Create")" class="btn btn-primary mt-3">
                    <i class="fas fa-exclamation-triangle me-2"></i>Report Incident
                </a>
            </div>
        }
    </div>
</div>

<script>
    function changePageSize(size) {
        const url = new URL(window.location.href);
        url.searchParams.set('pageSize', size);
        url.searchParams.set('pageNumber', '1');
        window.location.href = url.toString();
    }
</script>
