@model SecurityAgencyApp.Web.Models.Api.BillDetailDto
@{
    ViewData["Title"] = "Bill Details";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Bill Details</h1>
            <p class="page-subtitle">View bill information</p>
        </div>
        <div>
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Edit
            </a>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-4">Bill Information</h5>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold text-muted">Bill Number</label>
                        <p class="mb-0"><strong>@Model.BillNumber</strong></p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold text-muted">Bill Date</label>
                        <p class="mb-0">@Model.BillDate.ToString("dd MMM yyyy")</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold text-muted">Client Name</label>
                        <p class="mb-0">@Model.ClientName</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold text-muted">Site</label>
                        <p class="mb-0">@(Model.SiteName ?? "-")</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold text-muted">Status</label>
                        <p class="mb-0">
                            <span class="badge bg-@(Model.Status == "Paid" ? "success" : Model.Status == "Overdue" ? "danger" : Model.Status == "Sent" ? "info" : "secondary")">
                                @Model.Status
                            </span>
                        </p>
                    </div>
                    @if (Model.DueDate.HasValue)
                    {
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-muted">Due Date</label>
                            <p class="mb-0">@Model.DueDate.Value.ToString("dd MMM yyyy")</p>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="col-12">
                            <label class="form-label fw-semibold text-muted">Description</label>
                            <p class="mb-0">@Model.Description</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        @if (Model.Items != null && Model.Items.Any())
        {
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-body">
                    <h5 class="card-title mb-4">Bill Items</h5>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Item Name</th>
                                    <th>Description</th>
                                    <th class="text-end">Quantity</th>
                                    <th class="text-end">Unit Price</th>
                                    <th class="text-end">Tax Rate</th>
                                    <th class="text-end">Discount</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>@item.ItemName</td>
                                        <td>@(item.Description ?? "-")</td>
                                        <td class="text-end">@item.Quantity</td>
                                        <td class="text-end">₹@item.UnitPrice.ToString("N2")</td>
                                        <td class="text-end">@item.TaxRate.ToString("N2")%</td>
                                        <td class="text-end">₹@item.DiscountAmount.ToString("N2")</td>
                                        <td class="text-end"><strong>₹@item.TotalAmount.ToString("N2")</strong></td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="6" class="text-end">Sub Total:</th>
                                    <th class="text-end">₹@Model.SubTotal.ToString("N2")</th>
                                </tr>
                                <tr>
                                    <th colspan="6" class="text-end">Discount:</th>
                                    <th class="text-end">₹@Model.DiscountAmount.ToString("N2")</th>
                                </tr>
                                <tr>
                                    <th colspan="6" class="text-end">Tax:</th>
                                    <th class="text-end">₹@Model.TaxAmount.ToString("N2")</th>
                                </tr>
                                <tr>
                                    <th colspan="6" class="text-end">Total Amount:</th>
                                    <th class="text-end text-success">₹@Model.TotalAmount.ToString("N2")</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-4">Summary</h5>
                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted">Sub Total</label>
                    <p class="mb-0"><strong>₹@Model.SubTotal.ToString("N2")</strong></p>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted">Discount</label>
                    <p class="mb-0">₹@Model.DiscountAmount.ToString("N2")</p>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted">Tax</label>
                    <p class="mb-0">₹@Model.TaxAmount.ToString("N2")</p>
                </div>
                <div class="mb-3 border-top pt-3">
                    <label class="form-label fw-semibold text-muted">Total Amount</label>
                    <p class="mb-0"><strong class="text-success fs-5">₹@Model.TotalAmount.ToString("N2")</strong></p>
                </div>
                @if (!string.IsNullOrEmpty(Model.PaymentTerms))
                {
                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">Payment Terms</label>
                        <p class="mb-0">@Model.PaymentTerms</p>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">Notes</label>
                        <p class="mb-0">@Model.Notes</p>
                    </div>
                }
                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted">Created Date</label>
                    <p class="mb-0">@Model.CreatedDate.ToString("dd MMM yyyy HH:mm")</p>
                </div>
            </div>
        </div>
    </div>
</div>
