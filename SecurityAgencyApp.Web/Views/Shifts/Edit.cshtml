@model SecurityAgencyApp.Web.Models.Api.UpdateShiftRequest
@{
    ViewData["Title"] = "Edit Shift";
}

<div class="page-header">
    <h1 class="page-title">Edit Shift</h1>
    <p class="page-subtitle">Update shift details</p>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="ShiftName" class="form-label">Shift Name <span class="text-danger">*</span></label>
                    <input asp-for="ShiftName" class="form-control" placeholder="e.g., Morning Shift" />
                    <span asp-validation-for="ShiftName" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="StartTime" class="form-label">Start Time <span class="text-danger">*</span></label>
                    <input asp-for="StartTime" type="time" class="form-control" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="EndTime" class="form-label">End Time <span class="text-danger">*</span></label>
                    <input asp-for="EndTime" type="time" class="form-control" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="BreakDuration" class="form-label">Break Duration (minutes) <span class="text-danger">*</span></label>
                    <input asp-for="BreakDuration" type="number" class="form-control" min="0" />
                    <span asp-validation-for="BreakDuration" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="IsActive" class="form-label">Status</label>
                    <div class="form-check form-switch mt-2">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                        <label asp-for="IsActive" class="form-check-label">Active</label>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Update Shift
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-times me-2"></i>Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
