@model SecurityAgencyApp.Web.Models.Api.WageListResponse
@{
    ViewData["Title"] = "Wages Management";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Wage Sheets</h1>
            <p class="page-subtitle">Manage guard wages</p>
        </div>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-money-bill-wave me-2"></i>Create New Wage Sheet
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card border-0 shadow-sm">
    <div class="card-body">
        @if (Model?.Items != null && Model.Items.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Wage Sheet Number</th>
                            <th>Period</th>
                            <th>Payment Date</th>
                            <th class="text-end">Total Wages</th>
                            <th class="text-end">Net Amount</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var wage in Model.Items)
                        {
                            <tr>
                                <td><strong>@wage.WageSheetNumber</strong></td>
                                <td>
                                    @wage.WagePeriodStart.ToString("dd MMM") - @wage.WagePeriodEnd.ToString("dd MMM yyyy")
                                </td>
                                <td>@wage.PaymentDate.ToString("dd MMM yyyy")</td>
                                <td class="text-end">₹@wage.TotalWages.ToString("N2")</td>
                                <td class="text-end"><strong>₹@wage.NetAmount.ToString("N2")</strong></td>
                                <td>
                                    <span class="badge bg-@(wage.Status == "Paid" ? "success" : wage.Status == "Approved" ? "info" : "secondary")">
                                        @wage.Status
                                    </span>
                                </td>
                                <td class="text-end">
                                    <a href="#" class="btn btn-sm btn-outline-primary" title="View">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        @if (Model.PageNumber > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.PageNumber - 1, pageSize = Model.PageSize, search = ViewBag.Search, status = ViewBag.Status })">
                                    <i class="fas fa-chevron-left"></i> Previous
                                </a>
                            </li>
                        }
                        @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { pageNumber = i, pageSize = Model.PageSize, search = ViewBag.Search, status = ViewBag.Status })">@i</a>
                            </li>
                        }
                        @if (Model.PageNumber < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.PageNumber + 1, pageSize = Model.PageSize, search = ViewBag.Search, status = ViewBag.Status })">
                                    Next <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-money-bill-wave fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No wage sheets found</h5>
                <a href="@Url.Action("Create")" class="btn btn-primary mt-3">
                    <i class="fas fa-money-bill-wave me-2"></i>Create New Wage Sheet
                </a>
            </div>
        }
    </div>
</div>
