@model SecurityAgencyApp.Web.Models.Api.ContractDetailDto
@{
    ViewData["Title"] = "Contract Details";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Contract Details</h1>
            <p class="page-subtitle">View contract information</p>
        </div>
        <div>
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Edit
            </a>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-4">Contract Information</h5>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold text-muted">Contract Number</label>
                        <p class="mb-0"><strong>@Model.ContractNumber</strong></p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold text-muted">Client</label>
                        <p class="mb-0">@Model.ClientName</p>
                    </div>
                    <div class="col-12">
                        <label class="form-label fw-semibold text-muted">Title</label>
                        <p class="mb-0">@Model.Title</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold text-muted">Start Date</label>
                        <p class="mb-0">@Model.StartDate.ToString("dd MMM yyyy")</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold text-muted">End Date</label>
                        <p class="mb-0">@Model.EndDate.ToString("dd MMM yyyy")</p>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-semibold text-muted">Contract Value</label>
                        <p class="mb-0"><strong>₹@Model.ContractValue.ToString("N2")</strong></p>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-semibold text-muted">Monthly Amount</label>
                        <p class="mb-0">₹@Model.MonthlyAmount.ToString("N2")</p>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-semibold text-muted">Billing Cycle</label>
                        <p class="mb-0">@Model.BillingCycle</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold text-muted">Status</label>
                        <p class="mb-0">
                            <span class="badge bg-@(Model.Status == "Active" ? "success" : Model.Status == "Expired" ? "danger" : "secondary")">
                                @Model.Status
                            </span>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold text-muted">Number of Guards</label>
                        <p class="mb-0">@(Model.NumberOfGuards?.ToString() ?? "-")</p>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="col-12">
                            <label class="form-label fw-semibold text-muted">Description</label>
                            <p class="mb-0">@Model.Description</p>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.PaymentTerms))
                    {
                        <div class="col-12">
                            <label class="form-label fw-semibold text-muted">Payment Terms</label>
                            <p class="mb-0">@Model.PaymentTerms</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        @if (Model.Sites != null && Model.Sites.Any())
        {
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-body">
                    <h5 class="card-title mb-4">Contract Sites</h5>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Site Name</th>
                                    <th>Required Guards</th>
                                    <th>Shift Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var site in Model.Sites)
                                {
                                    <tr>
                                        <td>@site.SiteName</td>
                                        <td>@site.RequiredGuards</td>
                                        <td>@(site.ShiftDetails ?? "-")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-4">Additional Information</h5>
                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted">Created Date</label>
                    <p class="mb-0">@Model.CreatedDate.ToString("dd MMM yyyy HH:mm")</p>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted">Auto Renewal</label>
                    <p class="mb-0">
                        <span class="badge bg-@(Model.AutoRenewal ? "success" : "secondary")">
                            @(Model.AutoRenewal ? "Yes" : "No")
                        </span>
                    </p>
                </div>
                @if (Model.RenewalDate.HasValue)
                {
                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">Renewal Date</label>
                        <p class="mb-0">@Model.RenewalDate.Value.ToString("dd MMM yyyy")</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
