@model SecurityAgencyApp.Application.Features.Authentication.Commands.RegisterAgency.RegisterAgencyCommand
@{
    ViewData["Title"] = "Register Agency";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register Agency - Security Agency Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        .register-container {
            max-width: 900px;
            width: 100%;
        }
        .register-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            overflow: hidden;
        }
        .register-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            text-align: center;
        }
        .register-header i {
            font-size: 48px;
            margin-bottom: 15px;
        }
        .register-header h2 {
            margin: 0;
            font-weight: 600;
        }
        .register-body {
            padding: 40px;
        }
        .form-section {
            margin-bottom: 30px;
        }
        .section-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid #e2e8f0;
        }
        .form-control {
            border-radius: 10px;
            padding: 12px 15px;
            border: 2px solid #e5e7eb;
            transition: all 0.3s;
        }
        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }
        .btn-register {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 10px;
            padding: 12px 30px;
            font-weight: 600;
            color: white;
            transition: transform 0.2s;
        }
        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
            color: white;
        }
        .text-danger {
            color: #ef4444 !important;
            font-size: 0.875rem;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-card">
            <div class="register-header">
                <i class="fas fa-building"></i>
                <h2>Register Your Agency</h2>
                <p class="mb-0 mt-2">Create your account and get started</p>
            </div>
            <div class="register-body">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger" role="alert">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }
                
                <form method="post" asp-action="Register" asp-controller="Auth">
                    <!-- Agency Information -->
                    <div class="form-section">
                        <h5 class="section-title">
                            <i class="fas fa-building me-2"></i>Agency Information
                        </h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="CompanyName" class="form-label fw-semibold">Company Name <span class="text-danger">*</span></label>
                                <input asp-for="CompanyName" class="form-control" placeholder="Enter company name" required />
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="RegistrationNumber" class="form-label fw-semibold">Registration Number <span class="text-danger">*</span></label>
                                <input asp-for="RegistrationNumber" class="form-control" placeholder="Enter registration number" required />
                                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row g-3 mt-2">
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-semibold">Agency Email <span class="text-danger">*</span></label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="agency@example.com" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label fw-semibold">Phone Number <span class="text-danger">*</span></label>
                                <input asp-for="Phone" class="form-control" placeholder="Enter phone number" required />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row g-3 mt-2">
                            <div class="col-md-12">
                                <label asp-for="Address" class="form-label fw-semibold">Address</label>
                                <input asp-for="Address" class="form-control" placeholder="Enter address" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row g-3 mt-2">
                            <div class="col-md-4">
                                <label asp-for="City" class="form-label fw-semibold">City</label>
                                <input asp-for="City" class="form-control" placeholder="Enter city" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="State" class="form-label fw-semibold">State</label>
                                <input asp-for="State" class="form-control" placeholder="Enter state" />
                                <span asp-validation-for="State" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="PinCode" class="form-label fw-semibold">Pin Code</label>
                                <input asp-for="PinCode" class="form-control" placeholder="Enter pin code" />
                                <span asp-validation-for="PinCode" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Admin User Information -->
                    <div class="form-section">
                        <h5 class="section-title">
                            <i class="fas fa-user-shield me-2"></i>Administrator Account
                        </h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="AdminFirstName" class="form-label fw-semibold">First Name <span class="text-danger">*</span></label>
                                <input asp-for="AdminFirstName" class="form-control" placeholder="Enter first name" required />
                                <span asp-validation-for="AdminFirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="AdminLastName" class="form-label fw-semibold">Last Name</label>
                                <input asp-for="AdminLastName" class="form-control" placeholder="Enter last name" />
                                <span asp-validation-for="AdminLastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row g-3 mt-2">
                            <div class="col-md-6">
                                <label asp-for="AdminUserName" class="form-label fw-semibold">Username <span class="text-danger">*</span></label>
                                <input asp-for="AdminUserName" class="form-control" placeholder="Enter username" required />
                                <span asp-validation-for="AdminUserName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="AdminEmail" class="form-label fw-semibold">Email <span class="text-danger">*</span></label>
                                <input asp-for="AdminEmail" type="email" class="form-control" placeholder="admin@example.com" required />
                                <span asp-validation-for="AdminEmail" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row g-3 mt-2">
                            <div class="col-md-6">
                                <label asp-for="AdminPassword" class="form-label fw-semibold">Password <span class="text-danger">*</span></label>
                                <input asp-for="AdminPassword" type="password" class="form-control" placeholder="Enter password (min 6 characters)" required />
                                <span asp-validation-for="AdminPassword" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="AdminPhoneNumber" class="form-label fw-semibold">Phone Number</label>
                                <input asp-for="AdminPhoneNumber" class="form-control" placeholder="Enter phone number" />
                                <span asp-validation-for="AdminPhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a href="@Url.Action("Login")" class="text-decoration-none">
                            <i class="fas fa-arrow-left me-2"></i>Back to Login
                        </a>
                        <button type="submit" class="btn btn-register">
                            <i class="fas fa-user-plus me-2"></i>Register Agency
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
