@{
    ViewData["Title"] = "Password Retrieved";
    Layout = null;
    var email = TempData["ForgotPasswordEmail"] as string ?? "";
    var userName = TempData["ForgotPasswordUserName"] as string ?? "";
    var password = TempData["ForgotPasswordPassword"] as string ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Password Retrieved - Security Agency</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; display: flex; align-items: center; justify-content: center; }
        .card { border-radius: 20px; box-shadow: 0 20px 60px rgba(0,0,0,0.3); max-width: 420px; }
        .card-header { background: linear-gradient(135deg, #28a745 0%, #20c997 100%); color: white; padding: 24px; border-radius: 20px 20px 0 0; text-align: center; }
        .info-row { display: flex; justify-content: space-between; padding: 8px 0; border-bottom: 1px solid #eee; }
        .info-label { font-weight: 600; color: #666; }
    </style>
</head>
<body>
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-check-circle me-2"></i>Password Retrieved</h5>
        </div>
        <div class="card-body p-4">
            <div class="info-row">
                <span class="info-label">Email</span>
                <span>@email</span>
            </div>
            <div class="info-row">
                <span class="info-label">Username</span>
                <span>@userName</span>
            </div>
            <div class="info-row">
                <span class="info-label">Password</span>
                <span class="fw-bold text-primary">@password</span>
            </div>
            @if (password != null && password.Contains("not stored", StringComparison.OrdinalIgnoreCase))
            {
                <div class="alert alert-info mt-3 py-2 small">
                    Password was not saved in the system. You can set a new password below.
                </div>
                <div class="text-center mt-2">
                    <a href="@Url.Action("ResetPassword", "Auth", new { email = email })" class="btn btn-success">Set New Password</a>
                </div>
            }
            <div class="text-center mt-4">
                <a href="@Url.Action("Login", "Auth")" class="btn btn-primary">Back to Login</a>
            </div>
        </div>
    </div>
</body>
</html>
