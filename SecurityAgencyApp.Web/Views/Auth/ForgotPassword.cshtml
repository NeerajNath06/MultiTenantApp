@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Forgot Password - Security Agency</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; display: flex; align-items: center; justify-content: center; }
        .card { border-radius: 20px; box-shadow: 0 20px 60px rgba(0,0,0,0.3); max-width: 420px; }
        .card-header { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 24px; border-radius: 20px 20px 0 0; text-align: center; }
        .btn-submit { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; color: white; padding: 12px; border-radius: 10px; width: 100%; font-weight: 600; }
        .btn-submit:hover { color: white; opacity: 0.9; }
    </style>
</head>
<body>
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-key me-2"></i>Forgot Password</h5>
        </div>
        <div class="card-body p-4">
            <p class="text-muted small">Enter your registered email. We will show the password stored for recovery (check database if not set).</p>
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState[""]?.Errors.Any() == true)
            {
                <div class="alert alert-danger py-2">@ViewData.ModelState[""]?.Errors.First().ErrorMessage</div>
            }
            <form method="post" asp-action="ForgotPassword" asp-controller="Auth">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="your@email.com" required value="@(ViewData["Email"] ?? "")" />
                </div>
                <button type="submit" class="btn btn-submit">Retrieve Password</button>
            </form>
            <div class="text-center mt-3">
                <a href="@Url.Action("Login", "Auth")" class="text-decoration-none small">Back to Login</a>
            </div>
        </div>
    </div>
</body>
</html>
