@model SecurityAgencyApp.Web.Models.Api.CreateVisitorRequest
@{
    ViewData["Title"] = "Register Visitor";
}

<div class="page-header">
    <h1 class="page-title">Register Visitor</h1>
    <p class="page-subtitle">Log visitor entry</p>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="VisitorName" class="form-label fw-semibold">Visitor Name <span class="text-danger">*</span></label>
                    <input asp-for="VisitorName" class="form-control" required />
                    <span asp-validation-for="VisitorName" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="VisitorType" class="form-label fw-semibold">Type</label>
                    <select asp-for="VisitorType" class="form-select">
                        <option value="Individual">Individual</option>
                        <option value="Contractor">Contractor</option>
                        <option value="Vendor">Vendor</option>
                        <option value="Guest">Guest</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label asp-for="CompanyName" class="form-label fw-semibold">Company</label>
                    <input asp-for="CompanyName" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="PhoneNumber" class="form-label fw-semibold">Phone <span class="text-danger">*</span></label>
                    <input asp-for="PhoneNumber" class="form-control" required />
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label fw-semibold">Email</label>
                    <input asp-for="Email" type="email" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Purpose" class="form-label fw-semibold">Purpose <span class="text-danger">*</span></label>
                    <input asp-for="Purpose" class="form-control" placeholder="e.g. Meeting, Delivery" required />
                    <span asp-validation-for="Purpose" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="HostName" class="form-label fw-semibold">Host Name</label>
                    <input asp-for="HostName" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="HostDepartment" class="form-label fw-semibold">Host Department</label>
                    <select asp-for="HostDepartment" class="form-select" asp-items="ViewBag.Departments">
                        <option value="">-- Select Department --</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label asp-for="SiteId" class="form-label fw-semibold">Site <span class="text-danger">*</span></label>
                    <select asp-for="SiteId" class="form-select" asp-items="ViewBag.Sites" required>
                        <option value="">-- Select Site --</option>
                    </select>
                    <span asp-validation-for="SiteId" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="GuardId" class="form-label fw-semibold">Registering Guard <span class="text-danger">*</span></label>
                    <select asp-for="GuardId" class="form-select" asp-items="ViewBag.Guards" required>
                        <option value="">-- Select Guard --</option>
                    </select>
                    <span asp-validation-for="GuardId" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="IdProofType" class="form-label fw-semibold">ID Proof Type</label>
                    <select asp-for="IdProofType" class="form-select">
                        <option value="">-- None --</option>
                        <option value="Aadhaar">Aadhaar</option>
                        <option value="PAN">PAN</option>
                        <option value="Driving License">Driving License</option>
                        <option value="Passport">Passport</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label asp-for="IdProofNumber" class="form-label fw-semibold">ID Proof Number</label>
                    <input asp-for="IdProofNumber" class="form-control" />
                </div>
            </div>
            <div class="mt-4">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Register Visitor</button>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
