@model SecurityAgencyApp.Web.Models.Api.GuardDetailDto
@{
    ViewData["Title"] = "Guard Details";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Security Guard Details</h1>
            <p class="page-subtitle">@Model.FirstName @Model.LastName — @Model.GuardCode</p>
        </div>
        <div class="d-flex gap-2">
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                <i class="fas fa-edit me-2"></i>Edit
            </a>
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this guard? This cannot be undone.');">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash me-2"></i>Delete
                </button>
            </form>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h6 class="text-muted border-bottom pb-2 mb-3">Basic Info</h6>
                <dl class="row mb-0">
                    <dt class="col-sm-4">Guard Code</dt>
                    <dd class="col-sm-8"><span class="badge bg-secondary">@Model.GuardCode</span></dd>
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>
                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@(Model.Email ?? "-")</dd>
                    <dt class="col-sm-4">Phone</dt>
                    <dd class="col-sm-8">@Model.PhoneNumber</dd>
                    <dt class="col-sm-4">Gender</dt>
                    <dd class="col-sm-8">@Model.Gender</dd>
                    <dt class="col-sm-4">Date of Birth</dt>
                    <dd class="col-sm-8">@Model.DateOfBirth.ToString("dd MMM yyyy")</dd>
                    <dt class="col-sm-4">Joining Date</dt>
                    <dd class="col-sm-8">@(Model.JoiningDate?.ToString("dd MMM yyyy") ?? "-")</dd>
                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success"><i class="fas fa-check-circle me-1"></i>Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger"><i class="fas fa-times-circle me-1"></i>Inactive</span>
                        }
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <h6 class="text-muted border-bottom pb-2 mb-3">Address &amp; ID</h6>
                <dl class="row mb-0">
                    <dt class="col-sm-4">Address</dt>
                    <dd class="col-sm-8">@(Model.Address ?? "-")</dd>
                    <dt class="col-sm-4">City / State / Pin</dt>
                    <dd class="col-sm-8">@(Model.City ?? "-") @(Model.State ?? "-") @(Model.PinCode ?? "-")</dd>
                    <dt class="col-sm-4">Aadhar Number</dt>
                    <dd class="col-sm-8">@(Model.AadharNumber ?? "-")</dd>
                    <dt class="col-sm-4">PAN Number</dt>
                    <dd class="col-sm-8">@(Model.PANNumber ?? "-")</dd>
                    <dt class="col-sm-4">Emergency Contact</dt>
                    <dd class="col-sm-8">@(Model.EmergencyContactName ?? "-") — @(Model.EmergencyContactPhone ?? "-")</dd>
                    <dt class="col-sm-4">Supervisor</dt>
                    <dd class="col-sm-8">@(Model.SupervisorName ?? "-")</dd>
                    <dt class="col-sm-4">Created</dt>
                    <dd class="col-sm-8">@Model.CreatedDate.ToString("dd MMM yyyy")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
