@model SecurityAgencyApp.Web.Models.Api.CreateRoleRequest
@{
    var permissions = ViewBag.Permissions as List<SecurityAgencyApp.Web.Models.Api.PermissionDto>;
    ViewData["Title"] = "Create Role";
}

<div class="page-header">
    <h1 class="page-title">Create New Role</h1>
    <p class="page-subtitle">Add a new role to the system</p>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label fw-semibold">Role Name <span class="text-danger">*</span></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter role name" required />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Code" class="form-label fw-semibold">Role Code <span class="text-danger">*</span></label>
                    <input asp-for="Code" class="form-control" placeholder="Enter role code" required />
                    <span asp-validation-for="Code" class="text-danger small"></span>
                </div>
            </div>

            <div class="row g-3 mt-2">
                <div class="col-md-12">
                    <label asp-for="Description" class="form-label fw-semibold">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter role description"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>
            </div>

            <!-- Permissions Selection -->
            @if (permissions != null && permissions.Any())
            {
                <div class="mt-4">
                    <h5 class="fw-semibold mb-3">
                        <i class="fas fa-key me-2"></i>Select Permissions (Optional - can be assigned later)
                    </h5>
                    <div class="row">
                        @{
                            var groupedPermissions = permissions.GroupBy(p => p.Resource).OrderBy(g => g.Key);
                        }
                        @foreach (var group in groupedPermissions)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="card border">
                                    <div class="card-header bg-light">
                                        <h6 class="mb-0 fw-semibold">
                                            <i class="fas fa-folder me-2"></i>@group.Key
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        @foreach (var permission in group.OrderBy(p => p.Action))
                                        {
                                            <div class="form-check mb-2">
                                                <input class="form-check-input" type="checkbox" 
                                                       name="PermissionIds" 
                                                       value="@permission.Id" 
                                                       id="perm_@permission.Id" />
                                                <label class="form-check-label" for="perm_@permission.Id">
                                                    <strong>@permission.Action</strong>
                                                    @if (!string.IsNullOrEmpty(permission.Description))
                                                    {
                                                        <br /><small class="text-muted">@permission.Description</small>
                                                    }
                                                </label>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Create Role
                </button>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="fas fa-times me-2"></i>Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
